<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_surfer"
    tools:context=".FacebookLoginActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@drawable/sharewithworldregister" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/angel_circles" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="-25dp"
        android:layout_marginTop="105dp" >

        <ImageView
            android:id="@+id/google_login"
            android:layout_width="@dimen/login_button_size"
            android:layout_height="@dimen/login_button_size"
            android:layout_gravity="top|right"
            android:layout_marginTop="@dimen/login_button_top"
            android:src="@drawable/signin_gplus" />

        <ImageView
            android:id="@+id/facebook_login"
            android:layout_width="@dimen/login_button_size"
            android:layout_height="@dimen/login_button_size"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/login_button_right"
            android:src="@drawable/signin_fb" />

        <ImageView
            android:id="@+id/twitter_login"
            android:layout_width="@dimen/login_button_size"
            android:layout_height="@dimen/login_button_size"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/login_button_far_right"
            android:layout_marginTop="@dimen/login_button_top"
            android:src="@drawable/signin_twitter" />

        <ImageView
            android:id="@+id/email_login"
            android:layout_width="@dimen/login_button_size"
            android:layout_height="@dimen/login_button_size"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/login_button_right"
            android:layout_marginTop="@dimen/login_button_far_top"
            android:src="@drawable/signin_email" />
    </FrameLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/logo" />

</FrameLayout>